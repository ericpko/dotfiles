{
   "workbench.colorTheme": "Blueberry dark theme",
   "workbench.iconTheme": "material-icon-theme",
   "workbench.list.smoothScrolling": true,
   "workbench.list.automaticKeyboardNavigation": false,
   "editor.cursorSmoothCaretAnimation": true,
   "editor.smoothScrolling": true,
   "editor.tabSize": 3,
   "editor.tabCompletion": "on",
   "editor.wordWrapColumn": 100,
   "editor.fontFamily": "Input Mono Narrow, Roboto Sans Mono, Noto Sans Mono, Cascadia Code",
   "editor.fontLigatures": false,
   "editor.fontSize": 14,
   // "editor.lineHeight": 19,
   "editor.rulers": [
      100
   ],
   "[makefile]": {
      "editor.insertSpaces": false,
      "editor.detectIndentation": false,
      "editor.tabSize": 4
   },
   "terminal.integrated.cursorStyle": "line",
   "terminal.integrated.cursorBlinking": true,
   "files.insertFinalNewline": true,
   "editor.suggestSelection": "first",
   "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",


   /* -------------------------------------------------------------------------- */
   /*                                VIM Settings                                */
   /* -------------------------------------------------------------------------- */
   "vim.easymotion": true,
   "vim.scroll": 9,
   "vim.highlightedyank.enable": true,
   "vim.joinspaces": false,
   "vim.leader": "<space>",
   "vim.sneak": false,
   "vim.sneakReplacesF": true,
   "vim.sneakUseIgnorecaseAndSmartcase": true,
   "vim.textwidth": 100,
   "vim.useSystemClipboard": true,
   /* ----------------------------- Vim Insert Mode ---------------------------- */
   "vim.insertModeKeyBindings": [
      {
         "before": [
            "j",
            "k"
         ],
         "after": [
            "<Esc>"
         ]
      },
   ],
   /* ----------------------------- Vim Normal Mode ---------------------------- */
   "vim.normalModeKeyBindings": [
      {
         "before": [
            "<leader>",
            "m"
         ],
         "commands": [
            "bookmarks.toggle"
         ]
      },
      {
         "before": [
            "<leader>",
            "b"
         ],
         "commands": [
            "bookmarks.list"
         ]
      },
      // Go-to commands
      {
         "before": [
            "g",
            "s",
            "<leader>"
         ],
         "after": [
            "<leader>",
            "<leader>",
            "/"
         ]
      },
      {
         "before": [
            "g",
            "s",
            "s"
         ],
         "after": [
            "<leader>",
            "<leader>",
            "2",
            "s"
         ]
      },
      // <s> replaces vim-sneak. Changed vim.sneak: false for now
      {
         "before": [
            "s"
         ],
         "after": [
            "<leader>",
            "<leader>",
            "<leader>",
            "j"
         ]
      },
      // Doesn't work yet: https://github.com/VSCodeVim/Vim/issues/5122
      {
         "before": [
            "shift+enter"
         ],
         "after": [
            "<leader>",
            "<leader>",
            "<leader>",
            "j"
         ]
      },
      {
         "before": [
            "g",
            "s"
         ],
         "commands": [
            {
               "command": "workbench.action.quickOpen",
               "args": "@:"
            }
         ],
      },
      {
         "before": [
            "g",
            "t"
         ],
         "commands": [
            {
               "command": "workbench.action.quickOpen",
               "args": "#"
            }
         ]
      },
      {
         "before": [
            "["
         ],
         "commands": [
            {
               "command": "editor.action.jumpToBracket",
               "when": "editorTextFocus"
            }
         ]
      },
      // Code editing keybinds
      {
         "before": [
            "<leader>",
            "c",
            "r"
         ],
         "commands": ["editor.action.rename"]
      },
      // Toggle keybinds
      {
         "before": [
            "<leader>",
            "t",
            "t"
         ],
         "commands": [
            "workbench.action.terminal.toggleTerminal"
         ]
      },
      {
         "before": [
            "<leader>",
            "t",
            "a"
         ],
         "commands": [
            "workbench.action.toggleActivityBarVisibility"
         ]
      },
      {
         "before": [
            "<leader>",
            "t",
            "s"
         ],
         "commands": [
            "workbench.action.toggleSidebarVisibility"
         ]
      },
      {
         "before": [
            "<leader>",
            "t",
            "m"
         ],
         "commands": [
            "workbench.action.toggleMenuBar"
         ]
      },
      {
         "before": [
            "<leader>",
            "t",
            "M"
         ],
         "commands": [
            "editor.action.toggleMinimap"
         ]
      },
      // Open keybinds
      {
         "before": [
            "<leader>",
            "o",
            "e"
         ],
         "commands": [
            "workbench.view.explorer"
         ]
      },
      // Navigating files/tabs
      {
         "before": [
            "<leader>",
            "."
         ],
         "commands": [
            "workbench.action.quickOpen"
         ]
      },
      {
         "before": [
            "<leader>",
            ","
         ],
         "commands": [
            "workbench.action.quickOpen"
         ]
      },
      {
         "before": [
            "<leader>",
            "f",
            "f"
         ],
         "commands": [
            "workbench.action.quickOpen"
         ]
      },
      {
         "before": [
            "tab"
         ],
         "commands": [
            "workbench.action.nextEditor"
         ]
      },
      {
         "before": [
            "shift+tab"
         ],
         "commands": [
            "workbench.action.previousEditor"
         ]
      },
      {
         "before": [
            "<leader>",
            ":"
         ],
         "commands": [
            "workbench.action.showCommands"
         ]
      },
   ],
   "vim.operatorPendingModeKeyBindings": [
      {
         "before": [
            "L"
         ],
         "after": [
            "$"
         ]
      },
      {
         "before": [
            "H"
         ],
         "after": [
            "^"
         ]
      }
   ],
   "vim.visualModeKeyBindings": [
      {
         "before": [
            ">"
         ],
         "commands": [
            "editor.action.indentLines"
         ]
      },
      {
         "before": [
            "<"
         ],
         "commands": [
            "editor.action.outdentLines"
         ]
      },
   ],
   "workbench.activityBar.visible": false,
   "window.menuBarVisibility": "toggle",
   "editor.minimap.enabled": false,
   "editor.cursorBlinking": "phase",
}
