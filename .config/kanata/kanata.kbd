(defcfg
  process-unmapped-keys yes
)

(defsrc
  lmeta bspc caps lalt h l rmeta
)

(defoverrides
  (lmeta bspc) (lalt bspc)
  (lalt h) (lalt left)
  (lalt l) (lalt rght)
)

(defalias
  hyper-caps (tap-hold 200 200 esc (multi lctl lsft lalt lmeta))
)

(deflayer default
  lmeta bspc @hyper-caps lalt h l rctl
)
