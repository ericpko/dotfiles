# Theme
theme = noctalia
#background-opacity = 0.65

# Font
font-family = "Maple Mono NF"
# font-family = "CommitMono Nerd Font"

# Cursor
shell-integration-features = no-cursor
cursor-style = underline
adjust-underline-thickness = 1
mouse-hide-while-typing = true

# ssh
shell-integration-features = ssh-terminfo
shell-integration-features = ssh-env

# Window
window-padding-x = 0
window-padding-y = 0
window-padding-balance = true
window-height = 40
window-width = 150

# Keybinds
keybind = super+r=reload_config
keybind = super+left=previous_tab
keybind = super+right=next_tab
keybind = super+h=previous_tab
keybind = super+l=next_tab
keybind = alt+t=new_tab
keybind = super+t=new_tab
keybind = ctrl+t=new_tab
keybind = alt+h=previous_tab
keybind = alt+l=next_tab
keybind = alt+w=close_tab
keybind = ctrl+w=close_tab
keybind = super+w=close_tab
# keybind = alt+d=new_split:auto
keybind = alt+d=new_split:right
keybind = alt+shift+d=new_split:down
keybind = alt+[=goto_split:previous
keybind = alt+]=goto_split:next
keybind = ctrl+d=new_split:right
keybind = ctrl+shift+d=new_split:down
keybind = ctrl+[=goto_split:previous
keybind = ctrl+]=goto_split:next
# keybind = cmd+j=text:fg\n
keybind = shift+space=unbind

# delete previous word on linux with ctrl+backspace
keybind = ctrl+backspace=text:\x1b\x7f

# Linux issues -- trying to make it like MacOS with cmd+backspace and opt+backspace
# keybind = alt+backspace=text:\x15
keybind = shift+home>backspace=text:\x15
keybind = super+backspace=text:\x17

# Shaders
custom-shader = shaders/cursor_smear.glsl
# custom-shader = shaders/cursor_smear_fade.glsl
# custom-shader = shaders/cursor_blaze.glsl
# custom-shader = shaders/cursor_blaze_tapered.glsl
# custom-shader = shaders/cursor_blaze_no_trail.glsl
# custom-shader = shaders/manga_slash.glsl
keybind = shift+enter=text:\x1b\r
