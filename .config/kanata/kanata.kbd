(defcfg
  process-unmapped-keys yes
)

(defsrc
  lmeta bspc caps h l rmeta
)

(defoverrides
  (lmeta bspc) (lalt bspc)
  (lmeta h) (lalt left)
  (lmeta l) (lalt rght)
)

(defalias
  hyper-caps (tap-hold 200 200 esc (multi lctl lsft lalt lmeta))
)

(deflayer default
  lmeta bspc @hyper-caps h l rctl
)
